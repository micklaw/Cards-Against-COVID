@inherits FluxorComponent
@inject IState<GameState> GameState

<label class="font-weight-bold">Rounds played</label>
<p>@(GameState.Value.Game.PreviousRounds?.Count ?? 0)</p>

<label class="font-weight-bold">Scores</label>
@if (GameState.Value.Game.Players != null && GameState.Value.Game.Players.Any())
{
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in GameState.Value.Game.Players)
            {
                var score = GameState.Value.Game?.Score?.FirstOrDefault(i => i.Key == player.Id).Key ?? 0;

                <tr>
                    <td>@player.Name</td>
                    <td>@score</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No players have joined the game yet</p>
}

@if (!GameState.Value.Game.IsOver)
{
    <form>
        @if (GameState.Value.Game.IsOpen)
        {
            <div class="form-group">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Enter a name..." aria-label="">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button">Add player <span class="iconify" data-icon="oi:account-login" data-inline="false"></span></button>
                    </div>
                </div>
            </div>
        }
        <div class="form-group">
            @if (!GameState.Value.Game.IsOpen)
            {
            <button type="button" class="btn btn-primary">Open  <span class="iconify" data-icon="oi:lock-unlocked" data-inline="false"></span></button>
            }
            else
            {
                <button type="button" class="btn btn-primary">Lock <span class="iconify" data-icon="oi:lock-locked" data-inline="false"></span></button>
            }
            <button type="button" class="btn btn-primary">Finish</button>
        </div>
    </form>
}
else
{
    <div class="alert alert-primary" role="alert">
        <strong>It's over!</strong> Just like your sex life.
    </div>
}