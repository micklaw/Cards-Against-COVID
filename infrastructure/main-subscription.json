    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "infrastructure-deployment",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "environmentName": {
            "value": "[parameters('environmentName')]"
          },
          "baseName": {
            "value": "[parameters('baseName')]"
          },
          "storageAccountSku": {
            "value": "[parameters('storageAccountSku')]"
          },
          "functionAppSku": {
            "value": "[parameters('functionAppSku')]"
          },
          "functionAppSkuFamily": {
            "value": "[parameters('functionAppSkuFamily')]"
          },
          "staticWebAppSku": {
            "value": "[parameters('staticWebAppSku')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.39.26.7824",
              "templateHash": "5139690972679496627"
            }
          },
          "parameters": {
            "location": {
              "type": "string",
              "defaultValue": "[resourceGroup().location]",
              "metadata": {
                "description": "Location for all resources"
              }
            },
            "environmentName": {
              "type": "string",
              "metadata": {
                "description": "Environment name (e.g., dev, staging, prod)"
              }
            },
            "baseName": {
              "type": "string",
              "defaultValue": "cah",
              "metadata": {
                "description": "Base name for resources"
              }
            },
            "storageAccountSku": {
              "type": "string",
              "defaultValue": "Standard_LRS",
              "metadata": {
                "description": "Storage account SKU"
              }
            },
            "functionAppSku": {
              "type": "string",
              "defaultValue": "Y1",
              "metadata": {
                "description": "Function App SKU"
              }
            },
            "functionAppSkuFamily": {
              "type": "string",
              "defaultValue": "Y",
              "metadata": {
                "description": "Function App SKU Family"
              }
            },
            "staticWebAppSku": {
              "type": "string",
              "defaultValue": "Free",
              "metadata": {
                "description": "Static Web App SKU (Free or Standard)"
              }
            }
          },
          "variables": {
            "uniqueSuffix": "[uniqueString(resourceGroup().id)]",
            "storageAccountName": "[format('{0}storage{1}', parameters('baseName'), variables('uniqueSuffix'))]",
            "functionAppName": "[format('{0}-func-{1}-{2}', parameters('baseName'), parameters('environmentName'), variables('uniqueSuffix'))]",
            "appServicePlanName": "[format('{0}-plan-{1}-{2}', parameters('baseName'), parameters('environmentName'), variables('uniqueSuffix'))]",
            "staticWebAppName": "[format('{0}-swa-{1}-{2}', parameters('baseName'), parameters('environmentName'), variables('uniqueSuffix'))]"
          },
          "resources": [
            {
              "type": "Microsoft.Storage/storageAccounts",
              "apiVersion": "2023-05-01",
              "name": "[variables('storageAccountName')]",
              "location": "[parameters('location')]",
              "sku": {
                "name": "[parameters('storageAccountSku')]"
              },
              "kind": "StorageV2",
              "properties": {
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2",
                "allowBlobPublicAccess": false,
                "networkAcls": {
                  "defaultAction": "Allow"
                }
              }
            },
            {
              "type": "Microsoft.Storage/storageAccounts/tableServices",
              "apiVersion": "2023-05-01",
              "name": "[format('{0}/{1}', variables('storageAccountName'), 'default')]",
              "dependsOn": [
